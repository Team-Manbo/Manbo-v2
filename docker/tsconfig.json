{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "es2021"
      ],
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noImplicitAny": false
    },
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }